<div class="text-center">
  <h2>My communities</h2>

<table class="subscribed">
<% @memberships.each do |membership| %>
  <ul class="list-unstyled">
    <li><%= membership.community.name %></li>
    <li><%= link_to 'unsubscribe', membership_path(membership), method: :delete, remote: true, class: "btn btn-default"%></li>
  </ul>
  <% end %>
</table>
</div>