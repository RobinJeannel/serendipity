
<div class = "text-center">
  <%= form_for([@community, @article]) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title,  :placeholder => @article.title %>

    <%= f.text_area :content,:placeholder => @article.content, class: 'js-st-instance' %>
    <%= f.submit %>
  <% end %>
  <%= link_to 'Post my article', :class => "btn btn-success" %>
  <%= link_to 'back to my profil', user_path(current_user) %>
</div>

<script>
  $(function() {
    new SirTrevor.Editor({ el: $('.js-st-instance') });
  });
</script>
